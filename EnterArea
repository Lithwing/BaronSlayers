using System.Collections;
using System.Collections.Generic;
using UnityEngine.SceneManagement;
using UnityEngine;

public class EnterArea : MonoBehaviour
{
    // Start is called before the first frame update
    void Start()
    {
        
    }

    // Update is called once per frame
    void Update()
    {
        
    }
    private void OnCollisionEnter2D(Collision2D collision) //get the collider that collided
    {
        if (collision.gameObject.name == "Sophia_0") { //(Checks if its the player)

            SceneManager.LoadScene (1); //loads scene 1 (voiD)
        }
    }
}
